                <MultiDataTrigger.Setters>
                    <Setter Property="Image.Source" Value="/Images/chess_piece_black_king_T.png"/>
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>